{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        {% for product in products %}
                <div class="col-xs-6 col-lg-4">
                    <div class="col-xs-10 col-lg-6 thumb">
                        <a class="thumbnail" href="{{ path('product', {'id': product.id}) }}">
                            <img class="img-responsive" src="{{ product.image }}" alt="{{ product.category.title }}">
                        </a>
                    </div>
                    <p>{{ product.title }}</p>
                    <p><a class="btn btn-default" href="{{ path('product', {'id': product.id}) }}" role="button">View details Â»</a></p>
                </div>
        {% endfor %}
    </div>
{% endblock %}
